<%- include('layout/header') %>
    <div class="container-fluid">
        <div class="row my-4">
            <div class="col-lg-12">
                <% if (message) { %>
                    <div class="alert alert-success fade show" role="alert">
                        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                        <strong>
                            <%= message.message %>
                        </strong>
                    </div>
                    <% } %>
                        <div class="tabal-responsive" id="no-more-tables">
                            <% if (users !='' ) { %>
                                <table class="table table-striped text-center my-3">
                                    <thead>
                                        <tr class="table-dark">
                                            <th>#</th>
                                            <th>คำนำหน้า</th>
                                            <th>ชื่อ</th>
                                            <th>นามสกุล</th>
                                            <th>บริษัท</th>
                                            <th>ตำแหน่ง</th>
                                            <th>หน่วยงาน</th>
                                            <th>เบอร์</th>
                                            <th>อีเมล</th>

                                            <th>ประสงค์</th>
                                            <th>โรงงาน</th>
                                            <th>บันทึก</th>
                                            <th>ของชำร่วย</th>
                                            <th>สถานะ</th>
                                            <th>จัดการ</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <% users.forEach((row,index)=> { %>
                                            <tr>
                                                <td data-title="#">
                                                    <%= index %>
                                                </td>
                                                <td data-title="คำนำหน้า">
                                                    <%= row.prefix %>
                                                </td>
                                                <td data-title="ชื่อ">
                                                    <%= row.fname %>
                                                </td>
                                                <td data-title="นามสกุล">
                                                    <%= row.lname %>
                                                </td>
                                                <td data-title="บริษัท">
                                                    <%= row.company %>
                                                </td>
                                                <td data-title="ตำแหน่ง">
                                                    <%= row.position %>
                                                </td>
                                                <td data-title="หน่วยงาน">
                                                    <%= row.department %>
                                                </td>
                                                <td data-title="เบอร์">
                                                    <%= row.phone %>
                                                </td>
                                                <td data-title="อีเมล">
                                                    <%= row.email %>
                                                </td>

                                                <td data-title="ประสงค์">
                                                    <%= row.plant %>
                                                </td>
                                                <td data-title="โรงงาน">
                                                    <%= row.tour %>
                                                </td>
                                                <td data-title="บันทึก">
                                                    <%= row.note %>
                                                </td>
                                                <td data-title="ของชำร่วย">
                                                    <%= row.gift %>
                                                </td>
                                                <td data-title="สถานะ">
                                                    <%= row.status %>
                                                </td>
                                                <td data-title="จัดการ">
                                                    <a href="/edit/<%= row._id  %>" class="text-success"><i
                                                            class="fas fa-edit fa-lg mx-1"></i></a>
                                                    <a href="/delete/<%= row._id  %>" class="text-danger"><i
                                                            class="fas fa-trash fa-lg mx-1"></i></a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>

                                </table>
                                <% } else { %>
                                    <h1 class="text-center text-dark mt-5">ไม่พบผู้ใช้ในฐานข้อมูล</h1>
                                    <% } %>
                        </div>
            </div>
        </div>
    </div>
    <%- include('layout/footer') %>