<%- include('layout/header') %>
  <section class=" m-2">
    <div class="container">
      <div class="row d-flex justify-content-center align-items-center">
        <div class="col-lg-12 col-xl-11">
          <div class=" text-black">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                  <p class="text-center h1 fw-bold mb-3 mx-1 mx-md-3 mt-4"><i class="me-2 fa-solid fa-user-plus"></i>
                    ระบบเพิ่มข้อมูล<br><span class="h5 text-danger">*โปรดกรอกข้อมูลทุกฟิลด์</span></p>

                  <form action="/add" method="post" id="add_form" class="mx-1 mx-md-4">

                    <div class="d-flex flex-row align-items-center mb-2">
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example1c">คำนำหน้าชื่อ</label>
                        <select class="form-select border border-2" aria-label=".form-select-lg example" name="prefix"
                          id="prefix">
                          <option selected="Mr.">Mr.</option>
                          <option value="Ms.">Ms.</option>
                          <option value="Mrs.">Mrs.</option>
                        </select>
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-2">
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example1c">ชื่อ</label>
                        <input type="text" name="fname" id="fname" class="form-control border border-2" required />
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-2">
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example1c">นามสกุล</label>
                        <input type="text" name="lname" id="lname" class="form-control border border-2" required />
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-2">
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example1c">บริษัท</label>
                        <input type="text" name="company" id="company" class="form-control border border-2" required />
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-2">
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example1c">ตำแหน่ง</label>
                        <input type="text" name="position" id="position" class="form-control border border-2"
                          required />
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-2">
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example1c">หน่วยงาน</label>
                        <input type="text" name="department" id="department" class="form-control border border-2"
                          required />
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-2">
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example1c">เบอร์โทรศัพท์</label>
                        <input type="tel" name="phone" id="phone" class="form-control border border-2" required />
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-2">
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example1c">อีเมล</label>
                        <input type="email" name="email" id="email" class="form-control border border-2 " required />
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-2">
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example1c">ผู้ติดตาม/ผู้แทน (ถ้ามี)</label>
                        <input value="ไม่มี" type="text" name="follower" id="follower"
                          class="form-control border border-2" />
                      </div>
                    </div>

                    <div class="d-flex align-items-center justify-content-around">
                      <div class="d-flex flex-row align-items-center mb-2">
                        <div class="form-outline flex-fill mb-0">
                          <label class="form-label" for="form3Example1c">ประสงค์</label>
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="plant" value="เข้าร่วม" id="attend"
                              required>
                            <label class="form-check-label" for="flexRadioDefault1">
                              เข้าร่วม
                            </label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="plant" value="ไม่เข้าร่วม"
                              id="notattend">
                            <label class="form-check-label" for="flexRadioDefault2">
                              ไม่เข้าร่วม
                            </label>
                          </div>
                        </div>
                      </div>

                      <div class="d-flex flex-row align-items-center mb-2">
                        <div class="form-outline flex-fill mb-0">
                          <label class="form-label" for="form3Example1c">โรงงาน</label>
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="tour" value="ไม่เข้าร่วม" id="nontour"
                              required>
                            <label class="form-check-label" for="flexRadioDefault1">
                              ไม่เข้าร่วม
                            </label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="tour" value="rHDPE" id="ontour">
                            <label class="form-check-label" for="flexRadioDefault1">
                              rHDPE
                            </label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="tour" value="rPET" id="offtour">
                            <label class="form-check-label" for="flexRadioDefault2">
                              rPET
                            </label>
                          </div>

                        </div>
                      </div>

                      <div class="d-flex flex-row align-items-center mb-2">
                        <div class="form-outline flex-fill mb-0">
                          <label class="form-label" for="form3Example1c">สถานะ</label>
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="status" value="มาแล้ว" id="onstatus"
                              required>
                            <label class="form-check-label" for="flexRadioDefault1">
                              มาแล้ว
                            </label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="status" value="ยังไม่มา" id="offstatus">
                            <label class="form-check-label" for="flexRadioDefault2">
                              ยังไม่มา
                            </label>
                          </div>
                        </div>
                      </div>




                    </div>


                    <div class="d-flex justify-content-center mx-4 mt-3">
                      <a type="button" href="/cms" class="btn btn-dark btn-lg me-2">กลับ</a>
                      <input type="submit" name="submit" value="ยืนยัน" class="btn btn-secondary btn-lg" />
                    </div>



                  </form>

                </div>
                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                  <img src="./image/image_add.jpg" class="img-fluid" alt="Sample image">

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <%- include('layout/footer') %>