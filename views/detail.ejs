<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="../style/search.css">

    <!-- tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://unpkg.com/flowbite@1.5.3/dist/flowbite.min.css" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
        integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <div id="preloder">

    </div>
    <div class="mx-5 d-flex justify-content-center">
        <img src="../image/text_index.png" class="mb-3" alt="">

    </div>
    <div class="mx-5 d-flex justify-content-center">
        <img src="../image/text2_index.png" class="" alt="">

    </div>

    <form action="/update_status" method="post" class="mx-10">
        <input name="user_id" type="text" readonly value="<%= user[0]._id %>" hidden>
        <input style="font-size: 1.5rem;" name="name" type="text" readonly
            value="<%= user[0].fname +" "+ user[0].lname %>"
            class="focus:outline-0 mb-2 text-gray-900 w-80 h-8 px-2.5 border-0 shadow-lg shadow-white"><br>
        <input style="font-size: 1.5rem;" type="text" readonly value="<%= user[0].company %>"
            class="focus:outline-0 mb-2 text-gray-900 w-80 h-8 px-2.5 border-0 shadow-lg shadow-white"><br>
        <input style="font-size: 1.5rem;" type="text" readonly value="<%= user[0].position %>"
            class="focus:outline-0 mb-2 text-gray-900 w-80 h-8 px-2.5 border-0 shadow-lg shadow-white"><br>
        <input style="font-size: 1.5rem;" type="text" readonly value="<%= user[0].department %>"
            class="focus:outline-0 mb-2 text-gray-900 w-80 h-8 px-2.5 border-0 shadow-lg shadow-white"><br>
        <input style="font-size: 1.5rem;" type="text" readonly
            value="<%= user[0].phone.replace(/^(\d{3})(\d{3})(\d{4})/, '$1-$2-$3') %>"
            class="focus:outline-0 mb-2 text-gray-900 w-80 h-8 px-2.5 border-0 shadow-lg shadow-white"><br>
        <input style="font-size: 1.5rem;" type="text" readonly value="<%= user[0].tour %>"
            class="focus:outline-0 text-gray-900 w-80 h-8 px-2.5 border-0 shadow-lg shadow-white mb-2"><br>
        <input type="text" id="status" readonly value="<%= user[0].status %>" class="hidden">
        <input type="text" id="user_note" readonly value="<%= user[0].note %>" class="hidden">
        <input type="text" id="received" readonly value="<%= user[0].gift %>" class="hidden">
        <input style="font-size: 1.5rem;" type="text" placeholder="Note here" name="note" id="note"
            class="focus:outline-0 mb-2 text-gray-900 w-80 h-8 px-2.5 border-0 shadow-lg shadow-white"><br>
        <div id="header-received" class="d-flex justify-center">
            <p style="font-size: 1.4rem; color: #FFC10E;">Received Giveaway</p>
        </div>

        <div id="gift_receive" class="d-flex justify-center p-1">
            <label for="yellow-toggle" class="inline-flex relative items-center mr-5 cursor-pointer">
                <input name="gift_receive" type="checkbox" value="รับแล้ว" id="yellow-toggle" class="sr-only peer">
                <div
                    class="w-11 h-6 bg-gray-200 rounded-full peer dark:bg-gray-700 peer-focus:ring-4 peer-focus:ring-yellow-300 dark:peer-focus:ring-yellow-800 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-yellow-400">
                </div>
                <span style="font-size: 1.4rem;"
                    class="ml-3 text-sm font-medium text-gray-900 dark:text-gray-300">Receive</span>
            </label>
        </div>

        <div style="text-align: center;">
            <span id="text" style="color: #FFC10E; font-size: 1.5rem;"></span>
        </div>
        <div id="button-submit" style="display: flex; justify-content:center;">
            <a href="/search"><img src="../image/btn_back.png" alt="" class="w-40"></a>
            <button type="submit"><img src="../image/btn_register.png" class="w-40" alt=""></button>
        </div>
    </form>


    <script>
        if (document.getElementById('status').value === "มาแล้ว") {
            let note = document.getElementById('user_note').value

            document.getElementById('text').innerHTML = '<i style="font-size: 1.3rem; color: yellow;" class="fa-solid fa-triangle-exclamation"></i>  ท่านได้ทำการลงทะเบียนแล้ว'
            document.getElementById('note').readOnly = true
            document.getElementById('note').value = note
            // document.getElementById('gift_receive_user').classList.remove("hidden");
        }
        if (document.getElementById('received').value === "รับแล้ว") {
            document.getElementById('gift_receive').innerHTML = '<input style="font-size: 1.5rem;" type="text" readonly value="Received"class="focus:outline-0 text-gray-900 w-80 h-8 px-2.5 border-0 shadow-lg shadow-white mb-2" > <br>';
            document.getElementById('button-submit').innerHTML = '<a href="/search"><img src="../image/btn_back.png" alt="" class="w-40"></a>';
        }
        var loader = document.getElementById("preloder")
        window.addEventListener("load", function () {
            loader.style.display = "none";
        });
    </script>
    <script src="https://unpkg.com/flowbite@1.5.3/dist/flowbite.js"></script>
</body>

</html>